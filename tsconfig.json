{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es3",
    "module": "commonjs",
    "jsx": "preserve",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "dist",
    "declaration": true,
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "exclude": [
    "**/node_modules",
    "**/__tests__/**",
    "dist/**"
  ]
}
